<h4>Dashboard by me </h4>
<h3>Welcome {{name}}</h3>


{{#if stories}}
<h3>Here are your stories</h3>
<table class="striped"> 
<thead> 
    <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
    </tr>

</thead>
<tbody>
    {{#each stories}}
<tr>
<td><a href="/stories/{{_id}} ">{{title}} </a> </td>
<td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a '}} </td>
<td><span class="dash-status">{{status}} </span></td>
<td>
    <a href="/stories/edit/{{_id}} " class="btn btn-float"> <i class="fas fa-edit fa-small"></i>  </a>
<form action="/stories/{{_id}} " method="POST" id="delete-form" >
<input type="hidden" name="_method" value="DELETE">
<button type="submit" class="btn red">
<i class="fas fa-trash fa-small"></i>

</button>

</form>

</td>
</tr>

    {{/each}}

</tbody>
</table>

{{else}}
<h3>You have not created any stories</h3>
{{/if}}